<project name="zJenkins" default="main" basedir=".">

	<property name="zJenkinsProjectName" value="zJenkins"></property>
	<property name="main-class-ZosBuild"
		value="com.zos.groovy.utilities.ZosBuild"></property>

	<!-- System defaults -->
	<property name="3rdparty.dir" value="/usr/lpp/tools/lib"></property>
	<property name="dbb.dir" value="/usr/lpp/IBM/dbb/lib"></property>
	<property name="dbb-groovy.dir"
		value="/usr/lpp/IBM/dbb/groovy-2.4.12/lib"></property>

	<property name="conf.dir" value="${basedir}/conf"></property>
	<loadproperties
		srcfile="${conf.dir}/GlobalAnt.properties"></loadproperties>

	<target name="display-properties">
		<echoproperties />
	</target>

	<target name="init"
		description="props from GlobalAnt.properties - conf.dir from git">
		<tstamp />
		<mkdir dir="${bin.dir}" />
		<mkdir dir="${dist.dir}" />
	</target>

	<path id="classpath">
		<fileset dir="${dbb.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="compile" depends="init"
		description="Compile Java source">
		<javac includeantruntime="false" srcdir="${src.java.dir}"
			destdir="${bin.dir}" classpathref="classpath">
		</javac>
	</target>

	<target name="jar" depends="compile"
		description="Create Jar files">
		<jar destfile="${dist.dir}/${ant.project.name}.jar"
			basedir="${bin.dir}" />
	</target>

	<target name="deploy" depends="jar"
		description="Deploy Java application">
		<copy todir="${zJenkins.lib.dir}" preservelastmodified="true">
			<fileset dir="${dist.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>
	</target>

	<path id="classpath.groovy">
		<fileset dir="${dbb.groovy.dir}">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${dbb.dir}">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${zJenkins.lib.dir}">
			<include name="*.jar" />
		</fileset>
	</path>

	<taskdef name="groovyc" classpathref="classpath.groovy"
		classname="org.codehaus.groovy.ant.Groovyc" />

	<target name="compile.groovy" depends="deploy"
		description="Compile Groovy source">
		<groovyc srcdir="${src.groovy.dir}" destdir="${bin.dir}"
			classpathref="classpath.groovy">
		</groovyc>
	</target>

	<target name="jar.groovy" depends="compile.groovy"
		description="Create Jar files">
		<jar destfile="${dist.dir}/${zJenkinsProjectName}.jar"
			basedir="${bin.dir}">
			<manifest>
				<attribute name="Main-Class"
					value="${main-class-ZosBuild}" />
			</manifest>
		</jar>
	</target>

	<target name="deploy.groovy" depends="jar.groovy"
		description="Deploy application">
		<copy todir="${zJenkins.lib.dir}" preservelastmodified="true">
			<fileset dir="${dist.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>
	</target>

	<target name="deploy-config" depends="deploy.groovy"
		description="Deploy application configuration">
		<copy todir="${zJenkins.conf.dir}" preservelastmodified="true">
			<fileset dir="${conf.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>
	</target>

	<target name="clean" depends="deploy-config"
		description="clean up">
		<delete dir="${basedir}" />
	</target>

	<!-- Default, run this -->
	<target name="main"
		depends="init, compile, jar, deploy, compile.groovy, jar.groovy, deploy.groovy, deploy-config, clean" />

</project>
